<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/rv_mentors_image"
        android:layout_width="90dp"
        android:src="@color/black"
        android:layout_height="90dp"
        android:layout_gravity="center|start" />

    <TextView
        android:id="@+id/rv_mentors_name"
        style="@style/text_16"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:layout_gravity="center|top"
        android:layout_marginEnd="24dp"
        android:text="@string/sultan_ergeshov" />

    <TextView
        android:id="@+id/rv_mentors_major"
        style="@style/text_16"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="20dp"
        android:text="Frontend" />

    <FrameLayout
        android:id="@+id/rv_mentors_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:layout_gravity="center|center"
        >

        <TextView
            android:id="@+id/rv_mentors_user_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27"
            android:textColor="@color/black_new"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="9dp"
            tools:ignore="RtlHardcoded,SmallSp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:drawableBottom="@drawable/users_vector"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="2dp"
            tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml" />

        <TextView
            android:id="@+id/rv_mentors_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14"
            android:textColor="@color/black_new"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="61dp"
            tools:ignore="RtlHardcoded,SmallSp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:drawableBottom="@drawable/like_vector"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="78dp"
            android:layout_marginBottom="2dp"
            tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml" />
        <TextView
            android:id="@+id/rv_mentors_dislike_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"
            android:textColor="@color/black_new"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="96dp"
            tools:ignore="RtlHardcoded,SmallSp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:drawableBottom="@drawable/dislike"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="112dp"
            android:layout_marginBottom="2dp"
            tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml" />
    </FrameLayout>

</androidx.cardview.widget.CardView>