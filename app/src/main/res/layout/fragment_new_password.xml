<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="78dp"
        android:layout_marginStart="16dp"
        />
    <ImageView
        android:id="@+id/logo_new_password_page"
        android:layout_width="46dp"
        android:layout_height="67dp"
        android:src="@drawable/logo_small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="72dp"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/create_new_password_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_new_password"
        app:layout_constraintTop_toBottomOf="@+id/logo_new_password_page"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:theme="@style/text_24"
        />
    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:hint="@string/new_password"
        android:drawableStart="@drawable/lock_vector"
        android:paddingLeft="16dp"
        android:textSize="14sp"
        style="@style/et_grey"
        android:drawableEnd="@drawable/eye_vector"
        android:paddingRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/create_new_password_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"

        tools:ignore="Autofill,TextFields" />
    <EditText
        android:id="@+id/et_password_confirm"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:hint="@string/repeat_new_password"
        android:drawableStart="@drawable/lock_vector"
        android:paddingLeft="16dp"
        android:textSize="14sp"
        style="@style/et_grey"
        android:drawableEnd="@drawable/eye_vector"
        android:paddingRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_new_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        tools:ignore="Autofill,TextFields" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm"
        android:layout_width="328dp"
        android:layout_height="58dp"
        android:layout_marginTop="19dp"
        android:text="@string/confirm"
        style="@style/btn_black_and_yellow"
        app:layout_constraintTop_toBottomOf="@+id/et_password_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>