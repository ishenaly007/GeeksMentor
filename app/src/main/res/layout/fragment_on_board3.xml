<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_new">

    <TextView
        android:id="@+id/arrow_board3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="78dp"
        android:background="@drawable/arrow_left_white" />

    <ImageView
        android:layout_width="46dp"
        android:layout_height="67dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="134dp"
        android:src="@drawable/logo_yellow" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/enter_board3"
        android:layout_width="328dp"
        android:layout_height="58dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="249dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/enter2"
        android:textAllCaps="false"
        android:textColor="@color/black_new"
        android:textSize="14sp"
        app:backgroundTint="@color/white_new"
        app:cornerRadius="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="321dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/or"
        android:textColor="@color/white_new"
        android:textSize="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_board3"
        android:layout_width="328dp"
        android:layout_height="58dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="364dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/registration"
        android:textAllCaps="false"
        android:textColor="@color/black_new"
        android:textSize="14sp"
        app:backgroundTint="@color/white_new"
        app:cornerRadius="10dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_skip_board3"
        style="@style/btn_yellow_and_black"
        android:layout_width="328dp"
        android:layout_height="58dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="84dp"
        android:drawableRight="@drawable/arrow_right_black"
        android:text="@string/continue_board1"
        app:cornerRadius="10dp" />
</FrameLayout>