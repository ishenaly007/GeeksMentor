<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scroll_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.home.HomeFragment">

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_24_medium"
            android:text="@string/good_day"
            android:layout_marginTop="72dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        
        <EditText
            android:id="@+id/et_search_home"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="@style/et_grey"
            android:hint="@string/searching_mentors"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:drawableStart="@drawable/search_vector"
            android:layout_margin="16dp"
            android:paddingStart="16dp"
            tools:ignore="Autofill,RtlSymmetry,TextFields" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ux_ui_home"
            android:layout_width="160dp"
            android:layout_height="66dp"
            style="@style/btn_light_grey"
            android:text="@string/ux_ui"
            android:drawableLeft="@drawable/figma_vector"
            app:layout_constraintTop_toBottomOf="@+id/et_search_home"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black_new"
            android:textFontWeight="400"
            tools:ignore="RtlHardcoded,UnusedAttribute" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_frontend_home"
            android:layout_width="160dp"
            android:layout_height="66dp"
            style="@style/btn_light_grey"
            android:text="@string/frontend"
            android:drawableLeft="@drawable/frontend_vector"
            app:layout_constraintTop_toBottomOf="@+id/et_search_home"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black_new"
            android:textFontWeight="400"
            tools:ignore="RtlHardcoded,UnusedAttribute" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_backend_home"
            android:layout_width="160dp"
            android:layout_height="66dp"
            style="@style/btn_light_grey"
            android:text="@string/backend"
            android:drawableLeft="@drawable/backend_vector"
            app:layout_constraintTop_toBottomOf="@+id/btn_ux_ui_home"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black_new"
            android:textFontWeight="400"
            tools:ignore="RtlHardcoded,UnusedAttribute" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_android_home"
            android:layout_width="160dp"
            android:layout_height="66dp"
            style="@style/btn_light_grey"
            android:text="@string/android"
            android:drawableLeft="@drawable/kotlin"
            app:layout_constraintTop_toBottomOf="@+id/btn_frontend_home"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black_new"
            android:textFontWeight="400"
            tools:ignore="RtlHardcoded,UnusedAttribute" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_technical_home"
            android:layout_width="160dp"
            android:layout_height="66dp"
            style="@style/btn_light_grey"
            android:text="@string/technical_mentors"
            android:drawableLeft="@drawable/chip_vector"
            app:layout_constraintTop_toBottomOf="@+id/btn_backend_home"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp"
            android:layout_marginTop="8dp"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black_new"
            android:textFontWeight="400"
            tools:ignore="RtlHardcoded,UnusedAttribute" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_admins_home"
            android:layout_width="160dp"
            android:layout_height="66dp"
            style="@style/btn_light_grey"
            android:text="@string/admins"
            android:drawableLeft="@drawable/user_vector"
            app:layout_constraintTop_toBottomOf="@+id/btn_android_home"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black_new"
            android:textFontWeight="400"
            tools:ignore="RtlHardcoded,UnusedAttribute" />

        <TextView
            android:id="@+id/tv_mentors_of_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mentors_of_month"
            app:layout_constraintTop_toBottomOf="@+id/btn_admins_home"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            style="@style/text_14"
            />

        <TextView
            android:id="@+id/tv_all_mentors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_mentors"
            style="@style/text_14"
            android:drawableEnd="@drawable/line_right_black"
            app:layout_constraintTop_toBottomOf="@+id/btn_admins_home"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="25dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv1_main"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            tools:listitem="@layout/list1_item"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tv_mentors_of_month"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            />
        <TextView
            android:id="@+id/tv_ux_ui_mentors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ux_ui_mentors"
            style="@style/text_14"
            app:layout_constraintTop_toBottomOf="@+id/rv1_main"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="31dp"
            />
        <TextView
            android:id="@+id/tv_all_mentors2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_mentors"
            style="@style/text_14"
            android:drawableEnd="@drawable/line_right_black"
            app:layout_constraintTop_toBottomOf="@+id/rv1_main"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="31dp"
            tools:ignore="UseCompatTextViewDrawableXml" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv2_main"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            tools:listitem="@layout/list2_item"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tv_all_mentors2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="100dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
