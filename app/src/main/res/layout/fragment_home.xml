<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scroll_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/frame_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.home.HomeFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_24_medium"
            android:text="@string/good_day"
            android:layout_marginTop="72dp"
            android:layout_marginLeft="16dp"
            />

       <ImageView
           android:id="@+id/arrow_home"
           android:layout_width="24dp"
           android:layout_height="24dp"
           android:src="@drawable/ring_vector"
           android:layout_gravity="top|right"
           android:layout_marginTop="74dp"
           android:layout_marginRight="16dp"
           />
        
        <EditText
            android:layout_width="328dp"
            android:layout_height="40dp"
            style="@style/et_grey"
            android:hint="@string/searching_mentors"
            android:layout_gravity="top|center"
            android:layout_marginTop="124dp"
            android:paddingLeft="16dp"
            android:drawableLeft="@drawable/search_vector"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ux_ui_home"
            android:layout_width="140dp"
            android:layout_height="56dp"
            style="@style/btn_light_grey"
            android:text="@string/ux_ui"
            android:drawableLeft="@drawable/figma_vector"
            android:layout_gravity="left|top"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="180dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_frontend_home"
            android:layout_width="140dp"
            android:layout_height="56dp"
            style="@style/btn_light_grey"
            android:text="@string/frontend"
            android:drawableLeft="@drawable/frontend_vector"
            android:layout_gravity="right|top"
            android:layout_marginRight="46dp"
            android:layout_marginTop="180dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_backend_home"
            android:layout_width="140dp"
            android:layout_height="56dp"
            style="@style/btn_light_grey"
            android:text="@string/backend"
            android:drawableLeft="@drawable/backend_vector"
            android:layout_gravity="left|top"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="234dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_android_home"
            android:layout_width="140dp"
            android:layout_height="56dp"
            style="@style/btn_light_grey"
            android:text="@string/android"
            android:drawableLeft="@drawable/kotlin"
            android:layout_gravity="right|top"
            android:layout_marginRight="46dp"
            android:layout_marginTop="234dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_technical_home"
            android:layout_width="140dp"
            android:layout_height="56dp"
            style="@style/btn_light_grey"
            android:text="@string/technical_mentors"
            android:drawableLeft="@drawable/chip_vector"
            android:layout_gravity="left|top"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="296dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_admins_home"
            android:layout_width="140dp"
            android:layout_height="56dp"
            style="@style/btn_light_grey"
            android:text="@string/admins"
            android:drawableLeft="@drawable/user_vector"
            android:layout_gravity="right|top"
            android:layout_marginRight="46dp"
            android:layout_marginTop="296dp"
            />

        <TextView
            android:id="@+id/tv_mentors_of_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mentors_of_month"
            style="@style/text_14"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="366dp"
            />

        <TextView
            android:id="@+id/tv_all_mentors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_mentors"
            style="@style/text_14"
            android:drawableRight="@drawable/line_right_black"
            android:layout_gravity="right"
            android:layout_marginTop="369dp"
            android:layout_marginRight="16dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv1_main"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="412dp"
            tools:listitem="@layout/list1_item"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            />
        <TextView
            android:id="@+id/tv_ux_ui_mentors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ux_ui_mentors"
            style="@style/text_14"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="589dp"
            />
        <TextView
            android:id="@+id/tv_all_mentors2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_mentors"
            style="@style/text_14"
            android:drawableRight="@drawable/line_right_black"
            android:layout_gravity="right"
            android:layout_marginTop="592dp"
            android:layout_marginRight="16dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv2_main"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="635dp"
            tools:listitem="@layout/list2_item"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            android:layout_marginBottom="100dp"
            />
    </FrameLayout>
</ScrollView>
