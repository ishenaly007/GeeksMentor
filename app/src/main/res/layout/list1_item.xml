<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="123dp"
    android:layout_height="145dp"
   >
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/rv1_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/rv1_img"
        android:layout_gravity="center|top"
        />
    <TextView
        android:id="@+id/rv1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sultan_ergeshov"
        style="@style/text_16"
        android:layout_gravity="center|top"
        android:layout_marginTop="98dp"
        />
    <TextView
        android:id="@+id/rv1_person_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27"
        android:textColor="@color/black_new"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="9dp"
        tools:ignore="RtlHardcoded,SmallSp"
        />
    <TextView
        android:id="@+id/rv1_person"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:drawableBottom="@drawable/users_vector"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="2dp"
        tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml" />

        <TextView
            android:id="@+id/rv1_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14"
            android:textColor="@color/black_new"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="61dp"
            tools:ignore="RtlHardcoded,SmallSp"
            />
    <TextView
        android:id="@+id/rv1_like"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:drawableBottom="@drawable/like_vector"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="78dp"
        android:layout_marginBottom="2dp"
        tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml" />
    <TextView
        android:id="@+id/rv1_dislike_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13"
        android:textColor="@color/black_new"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="96dp"
        tools:ignore="RtlHardcoded,SmallSp"
        />
    <TextView
        android:id="@+id/rv1_dislike"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:drawableBottom="@drawable/like_vector"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="112dp"
        android:layout_marginBottom="2dp"
        tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml" />

</androidx.cardview.widget.CardView>