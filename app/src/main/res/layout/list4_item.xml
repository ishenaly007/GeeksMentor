<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="133dp"
    android:layout_height="145dp"
    android:layout_marginEnd="8dp"
    card_view:cardElevation="0dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/rv4_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center|top"
        />
    <TextView
        android:id="@+id/rv4_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sultan_ergeshov"
        style="@style/text_16"
        android:layout_gravity="center|top"
        android:layout_marginTop="98dp"
        />
    <TextView
        android:id="@+id/rv4_person_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27"
        android:textColor="@color/black_new"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="9dp"
        tools:ignore="RtlHardcoded,SmallSp"
        />
    <TextView
        android:id="@+id/rv4_person"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:drawableBottom="@drawable/users_vector"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="2dp"
        tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/rv4_like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14"
        android:textColor="@color/black_new"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="61dp"
        tools:ignore="RtlHardcoded,SmallSp"
        />
    <TextView
        android:id="@+id/rv4_like"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:drawableBottom="@drawable/like_vector"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="78dp"
        android:layout_marginBottom="2dp"
        tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml" />
    <TextView
        android:id="@+id/rv4_dislike_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13"
        android:textColor="@color/black_new"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="96dp"
        tools:ignore="RtlHardcoded,SmallSp"
        />
    <TextView
        android:id="@+id/rv4_dislike"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:drawableBottom="@drawable/dislike"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="112dp"
        android:layout_marginBottom="2dp"
        tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml" />
</androidx.cardview.widget.CardView>