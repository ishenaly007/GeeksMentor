<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.auth.PasswordForgetFragment"
    android:background="@color/white_new">
    <TextView
        android:id="@+id/arrow_email"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_arrow_back"
        android:layout_marginTop="78dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />
    <ImageView
        android:layout_width="46dp"
        android:layout_height="67dp"
        android:src="@drawable/logo_small"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/logo_password_forget_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recover_email"
        android:layout_marginTop="179dp"
        android:layout_marginStart="16dp"
        style="@style/text_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/et_email_email_verification"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/email"
        android:drawableStart="@drawable/email_vector"
        android:paddingStart="16dp"
        android:layout_marginTop="24dp"
        style="@style/et_grey"
        app:layout_constraintTop_toBottomOf="@+id/logo_password_forget_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="@dimen/mrg_hor_16"
        android:layout_marginStart="@dimen/mrg_hor_16"


        tools:ignore="Autofill,RtlSymmetry,TextFields,VisualLintTextFieldSize" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm_email_verification"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="@string/confirm"
        style="@style/btn_black_and_yellow"
        app:layout_constraintTop_toBottomOf="@+id/et_email_email_verification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/mrg_hor_16"
        android:layout_marginStart="@dimen/mrg_hor_16"
        tools:ignore="VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>