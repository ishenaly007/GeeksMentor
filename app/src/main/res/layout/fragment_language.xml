<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/mrg_hor_16"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/back"
        android:textStyle="bold"
        android:textColor="@color/black_new"
        android:textSize="16sp"
        android:drawablePadding="8dp"
        android:fontFamily="@font/roboto_regular"
        app:drawableLeftCompat="@drawable/left_arrow" />

    <RelativeLayout
        android:id="@+id/btn_russian_language"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/russian_flag"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/russian"
            android:textSize="16sp"
            android:layout_marginStart="38dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black_new" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ok"
            android:layout_marginStart="365dp"
            android:layout_marginTop="3dp"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_kyrgyz_language"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_russian_language"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/kyrgyz_flag"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/kyrgyz"
            android:textSize="16sp"
            android:layout_marginStart="38dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black_new" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ok"
            android:layout_marginStart="365dp"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>