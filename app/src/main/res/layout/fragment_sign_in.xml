<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_new"
    tools:context=".presentation.auth.SignInFragment">

    <TextView
        android:id="@+id/arrow_main"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="78dp"
        android:background="@drawable/baseline_arrow_back" />

    <ImageView
        android:layout_width="46dp"
        android:layout_height="67dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="72dp"
        android:src="@drawable/logo_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="209dp"
        android:text="@string/enter"
        android:theme="@style/text_24" />

    <EditText
        android:id="@+id/et_login_main"
        style="@style/et_white_and_black"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="253dp"
        android:drawableLeft="@drawable/login_vector"
        android:hint="@string/email"
        android:paddingLeft="16dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_password_main"
        style="@style/et_white_and_black"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="309dp"
        android:drawableLeft="@drawable/lock_vector"
        android:drawableRight="@drawable/eye_vector"
        android:hint="@string/password"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="373dp"
        android:layout_marginRight="40dp"
        android:text="@string/forgot_your_password"
        android:theme="@style/text_14" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_enter_main"
        style="@style/btn_black_and_yellow"
        android:layout_width="328dp"
        android:layout_height="58dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="413dp"
        android:text="@string/enter2" />

    <TextView
        style="@style/text_16_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="493dp"
        android:text="@string/or" />

    <TextView
        android:id="@+id/tv_register_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="544dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/no_account_register_it"
        android:textColor="@color/black_new"
        android:textSize="16sp" />
</FrameLayout>
