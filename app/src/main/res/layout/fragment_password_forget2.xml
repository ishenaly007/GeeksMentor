<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.auth.PasswordForgetFragment2"
    >
    <TextView
        android:id="@+id/arrow_code"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_arrow_back"
        android:layout_marginTop="78dp"
        android:layout_marginLeft="16dp"
        />
    <ImageView
        android:layout_width="46dp"
        android:layout_height="67dp"
        android:src="@drawable/logo_small"
        android:layout_gravity="center|top"
        android:layout_marginTop="72dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/code_sent_on_email"
        android:layout_marginTop="179dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="top"
        style="@style/text_16_regular"
        />
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_example"
        android:layout_gravity="top"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="200dp"
        style="@style/text_16_regular"
        android:textStyle="bold"
        />

    <com.fraggjkee.smsconfirmationview.SmsConfirmationView
        android:id="@+id/sms_code_view"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="257dp"
        app:scv_codeLength="6"
        app:scv_showCursor="true"
        app:scv_symbolsSpacing="8dp"
        app:scv_symbolWidth="42dp"
        app:scv_symbolTextColor="@color/light_grey_new"
        android:outlineAmbientShadowColor="@color/light_grey_new"
        app:scv_symbolBorderActiveColor="@color/light_grey_new"
        app:scv_symbolBorderColor="@color/black_new"
        app:scv_symbolBorderCornerRadius="10dp"
        app:scv_symbolBorderWidth="1.7dp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_code_after"
        android:layout_gravity="top"
        android:layout_marginTop="337dp"
        android:layout_marginLeft="16dp"
        style="@style/text_14"

        />
    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="59"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:textColor="@color/black_new"
        android:layout_gravity="center|top"
        android:layout_marginTop="337dp"
        android:layout_marginLeft="18dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm_code_verification"
        android:layout_width="328dp"
        android:layout_height="58dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="387dp"
        android:text="@string/confirm"
        style="@style/btn_black_and_yellow"
        />
</FrameLayout>