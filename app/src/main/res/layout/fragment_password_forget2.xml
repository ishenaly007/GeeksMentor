<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.auth.PasswordForgetFragment2"
    >
    <TextView
        android:id="@+id/arrow_code"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="78dp"
        android:layout_marginStart="16dp"
        />
    <ImageView
        android:id="@+id/logo_password_forget_page2"
        android:layout_width="46dp"
        android:layout_height="67dp"
        android:src="@drawable/logo_small"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/enter_code_on_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/code_sent_on_email"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        style="@style/text_16_regular"
        app:layout_constraintTop_toBottomOf="@+id/logo_password_forget_page2"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_example"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        style="@style/text_16_regular"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/enter_code_on_email"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.fraggjkee.smsconfirmationview.SmsConfirmationView
        android:id="@+id/sms_code_view"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        app:scv_codeLength="6"
        app:scv_showCursor="true"
        app:scv_symbolsSpacing="8dp"
        app:scv_symbolWidth="42dp"
        app:scv_symbolTextColor="@color/light_grey_new"
        android:outlineAmbientShadowColor="@color/light_grey_new"
        app:scv_symbolBorderActiveColor="@color/light_grey_new"
        app:scv_symbolBorderColor="@color/black_new"
        app:scv_symbolBorderCornerRadius="10dp"
        app:scv_symbolBorderWidth="1.7dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/tv_code_sent_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_code_after"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        style="@style/text_14"
        app:layout_constraintTop_toBottomOf="@+id/sms_code_view"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_59"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:textColor="@color/black_new"
        android:layout_marginTop="32dp"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toBottomOf="@id/sms_code_view"
        app:layout_constraintStart_toEndOf="@+id/tv_code_sent_again"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm_code_verification"
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/mrg_hor_16"
        android:layout_marginStart="@dimen/mrg_hor_16"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:text="@string/confirm"
        style="@style/btn_black_and_yellow"
        app:layout_constraintTop_toBottomOf="@+id/tv_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>