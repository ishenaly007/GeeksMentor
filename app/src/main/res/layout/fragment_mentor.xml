<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/mrg_hor_16"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/back"
        android:textColor="@color/black_new"
        android:textSize="16sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/left_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mentors_profile_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back" />

    <TextView
        android:id="@+id/mentors_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/mrg_hor_16"
        android:layout_marginStart="@dimen/mrg_hor_16"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/sul"
        android:textColor="@color/black_new"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/mentors_profile_photo"
        app:layout_constraintTop_toTopOf="@+id/mentors_profile_photo" />

    <TextView
        android:id="@+id/mentors_profile_major"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/mentors_profile_name"
        app:layout_constraintStart_toEndOf="@+id/mentors_profile_photo"
        android:text="@string/ux_ui_"
        android:layout_marginTop="6dp"
        android:textSize="16sp"
        android:layout_marginStart="@dimen/mrg_hor_16"
        android:textColor="@color/black_new"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go_to_telegram"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/mentors_profile_photo"
        android:layout_marginTop="@dimen/mrg_hor_16"
        app:cornerRadius="8dp"
        android:backgroundTint="#F5F6F6"
        android:text="@string/go_to_telegram"
        android:drawableEnd="@drawable/logos_telegram"
        android:textColor="@color/black_new"
        android:letterSpacing="0"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto_regular"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/rating_mentor_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/rating_mentor"
        android:textColor="@color/black_new"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_go_to_telegram" />

    <RatingBar
        android:id="@+id/stars_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintTop_toBottomOf="@id/rating_mentor_tv" />

    <TextView
        android:id="@+id/ratings_and_reviews"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/ratings_and_reviews_tv"
        android:textColor="@color/black_new"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stars_rating_bar" />

    <TextView
        android:id="@+id/average_rating"
        android:layout_width="55dp"
        android:layout_height="47dp"
        android:layout_marginTop="32.5dp"
        android:layout_marginStart="@dimen/mrg_hor_16"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/roboto_medium"
        android:textSize="40sp"
        android:textColor="@color/black_new"
        android:text="4,8"
        app:layout_constraintTop_toBottomOf="@+id/ratings_and_reviews" />

    <view
        android:id="@+id/average_stars"
        class="androidx.appcompat.app.AlertController$RecycleListView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/mrg_hor_16"
        android:layout_marginTop="32.5dp"
        app:layout_constraintEnd_toEndOf="@+id/average_rating"
        app:layout_constraintStart_toStartOf="@+id/average_rating"
        app:layout_constraintTop_toBottomOf="@+id/average_rating">

    </view>

    <TextView
        android:id="@+id/how_many"
        android:layout_width="38dp"
        android:layout_height="16dp"
        app:layout_constraintEnd_toEndOf="@+id/average_rating"
        app:layout_constraintStart_toStartOf="@+id/average_rating"
        app:layout_constraintTop_toBottomOf="@+id/average_stars"
        android:layout_marginTop="6dp"
        android:drawableLeft="@drawable/users"
        android:text="27"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:textColor="@color/black_new"
        android:drawablePadding="6dp"/>

<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginEnd="@dimen/mrg_hor_16"-->
<!--        android:fontFamily="@font/roboto_regular"-->
<!--        android:text="5"-->
<!--        android:textColor="@color/black_new"-->
<!--        android:textSize="14sp"-->
<!--        app:layout_constraintEnd_toStartOf="@+id/horizontal_progress_bar_5_stars"-->
<!--        app:layout_constraintStart_toStartOf="parent" />-->

    <ProgressBar
        android:id="@+id/horizontal_progress_bar_5_stars"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ratings_and_reviews"
        android:layout_marginTop="30dp"/>

    <ProgressBar
        android:id="@+id/horizontal_progress_bar_4_stars"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal_progress_bar_5_stars"
        android:layout_marginTop="12dp"/>

    <ProgressBar
        android:id="@+id/horizontal_progress_bar_3_stars"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal_progress_bar_4_stars"
        android:layout_marginTop="12dp"/>

    <ProgressBar
        android:id="@+id/horizontal_progress_bar_2_stars"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal_progress_bar_3_stars"
        android:layout_marginTop="12dp"/>

    <ProgressBar
        android:id="@+id/horizontal_progress_bar_1_stars"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal_progress_bar_2_stars"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>