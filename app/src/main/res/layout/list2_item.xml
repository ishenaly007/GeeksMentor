<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="123dp"
    android:layout_height="145dp"
    android:layout_margin="16dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/rv2_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/rv1_img"
        android:layout_gravity="center|top"
        />
    <TextView
        android:id="@+id/rv2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sultan_ergeshov"
        style="@style/text_16"
        android:layout_gravity="center|top"
        android:layout_marginTop="98dp"
        />
    <TextView
        android:id="@+id/rv2_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27"
        style="@style/text_16"
        android:layout_gravity="top"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="6.5dp"
        android:drawableRight="@drawable/users_vector"
        />
    <LinearLayout
        android:id="@+id/rv2_linear"
        android:layout_width="50dp"
        android:layout_height="16dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="6.5dp"
        >
        <ImageView
            android:id="@+id/rv2_star1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/star_vector"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/rv2_star2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/star_vector"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/rv2_star3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/star_vector"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/rv2_star4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/star_vector"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/rv2_star5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/star_vector"
            android:layout_gravity="center"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>