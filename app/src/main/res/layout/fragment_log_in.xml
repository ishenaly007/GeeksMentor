<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.auth.LogInFragment"
    android:background="@color/white_new">
    <TextView
        android:id="@+id/arrow_signup"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="78dp"
        android:layout_marginStart="16dp"
        />
    <ImageView
        android:id="@+id/logo_login_page"
        android:layout_width="46dp"
        android:layout_height="67dp"
        android:src="@drawable/logo_small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="72dp"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/register_login_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black_new"
        app:layout_constraintTop_toBottomOf="@+id/logo_login_page"
        app:layout_constraintStart_toStartOf="parent"

        />
    <EditText
        android:id="@+id/et_login_signup"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:hint="@string/login"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/login_vector"
        android:paddingStart="16dp"
        style="@style/et_grey"
        app:layout_constraintTop_toBottomOf="@+id/register_login_page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        tools:ignore="Autofill,RtlSymmetry,TextFields" />
    <EditText
        android:id="@+id/et_email_signup"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:hint="@string/email"
        android:drawableStart="@drawable/email_vector"
        android:paddingStart="16dp"
        android:layout_marginTop="12dp"
        style="@style/et_grey"
        app:layout_constraintTop_toBottomOf="@+id/et_login_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        tools:ignore="Autofill,RtlSymmetry,TextFields" />
    <EditText
        android:id="@+id/et_password_signup"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:hint="@string/password"
        android:drawableStart="@drawable/lock_vector"
        android:paddingLeft="16dp"
        android:layout_marginTop="12dp"
        style="@style/et_grey"
        android:drawableEnd="@drawable/eye_vector"
        android:paddingRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_email_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="Autofill,RtlHardcoded,TextFields" />
    <EditText
        android:id="@+id/et_confirm_password_signup"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:hint="@string/confirm_password"
        android:drawableStart="@drawable/lock_vector"
        android:paddingLeft="16dp"
        android:layout_marginTop="12dp"
        style="@style/et_grey"
        android:drawableEnd="@drawable/eye_vector"
        android:paddingRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_password_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="Autofill,TextFields" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_registration_signup"
        android:layout_width="328dp"
        android:layout_height="58dp"
        android:layout_marginTop="19dp"
        android:text="@string/registration2"
        style="@style/btn_black_and_yellow"
        app:layout_constraintTop_toBottomOf="@+id/et_confirm_password_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/go_to_sign_in_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/have_account_enter"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        android:textColor="@color/black_new"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_registration_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>