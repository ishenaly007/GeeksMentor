<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.auth.LogInFragment"
    android:background="@color/white_new">
    <TextView
        android:id="@+id/arrow_signup"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_arrow_back"
        android:layout_marginTop="78dp"
        android:layout_marginLeft="16dp"
        />
    <ImageView
        android:layout_width="46dp"
        android:layout_height="67dp"
        android:src="@drawable/logo_small"
        android:layout_gravity="center|top"
        android:layout_marginTop="72dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="179dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black_new"
        />
    <EditText
        android:id="@+id/et_login_signup"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:hint="@string/login"
        android:layout_gravity="center|top"
        android:layout_marginTop="223dp"
        android:drawableLeft="@drawable/login_vector"
        android:paddingLeft="16dp"
        style="@style/et_white_and_black"
        />
    <EditText
        android:id="@+id/et_email_signup"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:hint="@string/email"
        android:drawableLeft="@drawable/email_vector"
        android:paddingLeft="16dp"
        android:layout_marginTop="279dp"
        android:layout_gravity="center|top"
        style="@style/et_white_and_black"
        />
    <EditText
        android:id="@+id/et_password_signup"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:hint="@string/password"
        android:drawableLeft="@drawable/lock_vector"
        android:paddingLeft="16dp"
        android:layout_marginTop="335dp"
        android:layout_gravity="center|top"
        style="@style/et_white_and_black"
        android:drawableRight="@drawable/eye_vector"
        android:paddingRight="16dp"
        />
    <EditText
        android:id="@+id/et_confirm_password_signup"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:hint="@string/confirm_password"
        android:drawableLeft="@drawable/lock_vector"
        android:paddingLeft="16dp"
        android:layout_marginTop="391dp"
        android:layout_gravity="center|top"
        style="@style/et_white_and_black"
        android:drawableRight="@drawable/eye_vector"
        android:paddingRight="16dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_registration_signup"
        android:layout_width="328dp"
        android:layout_height="58dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="458dp"
        android:text="@string/registration2"
        style="@style/btn_black_and_yellow"
        />
    <TextView
        android:id="@+id/go_to_sign_in_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/have_account_enter"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        android:textColor="@color/black_new"
        android:layout_gravity="center|top"
        android:layout_marginTop="535dp"
        />
</FrameLayout>