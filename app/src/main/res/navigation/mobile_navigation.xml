<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.abit8.geeksmentor.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.abit8.geeksmentor.ui.search.SearchFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.abit8.geeksmentor.ui.profile.ProfileFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/onBoardFragment"
        android:name="com.abit8.geeksmentor.ui.onboard.OnBoardFragment"
        android:label="fragment_on_board"
        tools:layout="@layout/fragment_on_board">
        <action
            android:id="@+id/action_onBoardFragment_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.abit8.geeksmentor.ui.auth.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in" />
    <fragment
        android:id="@+id/passwordForgetFragment"
        android:name="com.abit8.geeksmentor.ui.auth.PasswordForgetFragment"
        android:label="fragment_password_forget"
        tools:layout="@layout/fragment_password_forget" />
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.abit8.geeksmentor.ui.auth.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" />
    <fragment
        android:id="@+id/mentorProfileFragment"
        android:name="com.abit8.geeksmentor.ui.mentorprofile.ProfileFragment"
        android:label="fragment_mentor_profile"
        tools:layout="@layout/fragmen_profile">
        <action
            android:id="@+id/action_mentorProfileFragment_to_languageFragment"
            app:destination="@id/languageFragment" />
        <action
            android:id="@+id/action_mentorProfileFragment_to_mentorsDataFragment"
            app:destination="@id/mentorsDataFragment" />
        <action
            android:id="@+id/action_mentorProfileFragment_to_editMentorProfileFragment"
            app:destination="@id/editMentorProfileFragment" />
        <action
            android:id="@+id/action_mentorProfileFragment_to_mentorsNotificationFragment"
            app:destination="@id/mentorsNotificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/languageFragment"
        android:name="com.abit8.geeksmentor.ui.mentorprofile.LanguageFragment"
        android:label="fragment_language"
        tools:layout="@layout/fragment_language" />
    <fragment
        android:id="@+id/editMentorProfileFragment"
        android:name="com.abit8.geeksmentor.ui.mentorprofile.EditMentorProfileFragment"
        android:label="fragment_edit_mentors_profile"
        tools:layout="@layout/fragment_edit_mentors_profile" />
    <fragment
        android:id="@+id/mentorsDataFragment"
        android:name="com.abit8.geeksmentor.ui.mentorprofile.MentorsDataFragment"
        android:label="fragment_mentors_data"
        tools:layout="@layout/fragment_mentors_data" />
    <fragment
        android:id="@+id/passwordForgetFragment2"
        android:name="com.abit8.geeksmentor.ui.auth.PasswordForgetFragment2"
        android:label="fragment_password_forget2"
        tools:layout="@layout/fragment_password_forget2" />
    <fragment
        android:id="@+id/mentorsNotificationFragment"
        android:name="com.abit8.geeksmentor.ui.mentorprofile.MentorsNotificationFragment"
        android:label="fragment_mentors_notification"
        tools:layout="@layout/fragment_mentors_notification" />

</navigation>